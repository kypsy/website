<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error].html_safe %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice].html_safe %>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success].html_safe %>
  </div>
<% end %>
