<% if @user %>
  <meta name="twitter:card"        content="summary">
  <meta name="twitter:site"        content="@kypsy">
  <meta name="twitter:title"       content="@<%= @user.username %>'s profile on <%= t(:brand) %> : <%= t(:tagline) %>">
  <meta name="twitter:description" content="Bio: <%= truncate(@user.bio, length: 195) %>">
  <meta name="twitter:creator"     content="@kypsy">
  <meta name="twitter:image:src"   content="<%= @user.avatar %>">
  <meta name="twitter:domain"      content="<%= t(:url) %>">
<% else %>
