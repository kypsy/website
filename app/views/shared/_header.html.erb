<header role="banner">
  <div class="container">

    <% if logged_in? %>
      <h1>
        <%= link_to root_path, rel: "home" do %>
          <span class="sr-only">Home</span>
          <%= fa_icon :home, class: "fa-lg" %>
        <% end %>
      </h1>
    <% else %>
      <h1><%= link_to t(:brand), root_path, rel: "home" %></h1>
    <% end %>

    <nav role="navigation">
      <% if admin? %>
        <span class="label label-danger"><%= link_to "ADMIN", admin_dashboard_path %></span>
      <% end %>

      <% if logged_in? %>
        <%= link_to "People", people_path %>

        <%= link_to conversations_path do %>
          <%= fa_icon :envelope, class: "fa-lg" %>
          <% if unread_count %><span class="label label-danger"><%= unread_count %></span><% end %>
        <% end %>

        <%= link_to fa_icon(:gear, class: "fa-lg"), settings_path %>
        <%= link_to fa_icon(:user, class: "fa-lg"), person_path(current_user.username) if current_user.username.present? %>
      <% else %>
        <%= link_to fa_icon(:twitter, class: "fa-lg"),  "/auth/twitter",  class: "btn btn-sm btn-info"    %>
        <%= link_to fa_icon(:facebook, class: "fa-lg"), "/auth/facebook", class: "btn btn-sm btn-primary" %>
      <% end %>
    </nav>

    <% if logged_in? %>
      <%= form_tag "/people", method: :get, class: "form-inline col-xs-12 col-sm-3", role: "search" do %>
        <div class="form-group">
          <%= label_tag :search, "Search", class: "sr-only" %>
          <%= search_field_tag :search, params[:search], class: "form-control input-sm input-inverse", placeholder: "People Search" %>
        </div>
      <% end %>
    <% end %>

  </div>
</header>
