<div class="page-header">
  <h1>People Stats</h1>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="well">
      <h2><%= number_with_delimiter User.kids.count %></h2>
      <h3>Kids</h3>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="well">
      <h2><%= number_with_delimiter User.adults.count %></h2>
      <h3>Adults</h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="well">
      <h2><%= number_with_delimiter User.visible.count %></h2>
      <h3>Visible</h3>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="well">
      <h2><%= number_with_delimiter User.invisible.count %></h2>
      <h3>Invisible</h3>
    </div>
  </div>
</div>
