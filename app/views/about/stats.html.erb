<style>
  h2,
  h3 {
    text-align: center;
    text-transform: uppercase;
  }

  h2 {
    font-size: 4em;
  }

  h3 {
    font-size: 1.5em;
    font-weight: normal;
    color: #999;
  }
</style>


<div class="page-header">
  <h1>Total Stats</h1>
</div>

<%= render partial: "primary_stats_grid", locals: { group: @total_stats } %>

<div class="page-header">
  <h1>Today&rsquo;s Stats</h1>
</div>

<%= render partial: "primary_stats_grid", locals: { group: @today_stats } %>

