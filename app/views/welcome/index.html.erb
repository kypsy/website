<h1 class="brand"><%= t(:brand).upcase %></h1>

<p class="tagline">
  <%= t(:tagline).upcase %>
</p>

<div class="hero">
  <header>
    <h1><%= t "homepage.salutation" %></h1>
    <h2>
      <span class="primary"><%= t "homepage.main_message_first_line" %></span><br class="hidden-sm-down">
      <span class="secondary"><%= t "homepage.main_message_second_line" %></span>
    </h2>
  </header>

  <p class="join-link">
    <b><%= t "homepage.enter_button_text" %></b><br>

    <span>
      using
      <%= link_to "Twitter", "/auth/twitter" %>
      or
      <%= link_to "Facebook", "/auth/facebook" %>
    </span>
  </p>
</div>

<p class="links">
  <%= link_to t("homepage.links.about", brand: t(:brand)), about_path           %>
  <%= link_to t("homepage.links.tips_and_tricks"),         tips_path            %>
  <%= link_to t("homepage.links.terms"),                   terms_path           %>
  <%= link_to t("homepage.links.privacy_policy"),          privacy_path         %>
  <%= link_to t("homepage.links.code_of_conduct"),         code_of_conduct_path %>
</p>
