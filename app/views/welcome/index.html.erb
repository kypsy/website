<p class="links">
  <%= link_to "About&nbsp;#{t(:brand)}".html_safe,    about_path           %>
  <%= link_to "Tips&nbsp;and&nbsp;Tricks".html_safe,  tips_path            %>
  <%= link_to "Terms".html_safe,                      terms_path           %>
