<h1 class="brand"><%= t(:brand).upcase %></h1>

<p class="tagline">
  <%= t(:tagline).upcase %>
</p>

<div class="hero">
  <header>
    <h1>Ladies,</h1>
    <h2>
      <span class="primary">Let's make some friends</span><br class="hidden-sm-down">
      <span class="secondary">and have some fun.</span>
    </h2>
  </header>

  <p class="join-link">
    <b>JOIN KYPSY</b><br>

    <span>
      using
      <%= link_to "Twitter", "/auth/twitter" %>
      or
      <%= link_to "Facebook", "/auth/facebook" %>
    </span>
  </p>
</div>


