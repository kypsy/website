<% if mine? %>
  <%= link_to new_photo_path, class: "btn btn-success" do %>
    <%= fa_icon "picture-o" %>&nbsp;&nbsp;Add photo
  <% end %>

  <%= link_to settings_path,  class: "btn btn-secondary" do %>
    <%= fa_icon :pencil %><span class="hidden-xs">&nbsp;&nbsp;Edit profile</span>
  <% end %>

<% elsif not_mine? %>
  <div class="actions">

    <span class="btn-group">
      <%# MESSAGE BUTTON %>
      <%= link_to fa_icon(:pencil), new_message_path(username: user.username), class: "btn btn-info message" %>

      <%# BOOKMARK BUTTON %>
      <% hide_show = im.bookmarking?(user) ? ["block", "none"] : ["none", "block"] %>

      <%# bookmarked %>
      <div class="btn-group">
        <%= link_to fa_icon(:star, class: "text-primary"),
                    action_unbookmark_path(user.username),
                    method:            :delete,
                    id:                "unbookmark",
                    class:             "bookmark form-inline btn btn-default",
                    "data-username" => user.username,
                    style:             "display: #{hide_show.first}" %>
      </div>

      <%= link_to fa_icon(:star),
                  action_bookmark_path(user.username),
                  method:            :post,
                  id:                "new_secret_crush",
                  class:             "bookmark form-inline btn btn-primary",
                  "data-username" => user.username,
                  style:             "display: #{hide_show.last}" %>


      <%# CRUSH BUTTON %>
      <% hide_show = im.crushing_on?(user) ? ["block", "none"] : ["none", "block"] %>

      <%= link_to uncrush_path(user.username),
                  class:             "crush btn btn-default",
                  "data-username" => user.username,
                  method:            :delete,
                  style:             "display: #{hide_show.first}" do %>
        <b class="text-danger">
          <%= fa_icon :heart %>
          Uncrush
        </b>
      <% end %>

      <%= link_to crush_path(user.username),
                  class: "crush btn btn-danger",
                  "data-username" => user.username,
                  method:            :post,
                  style:             "display: #{hide_show.last}" do %>
        <%= fa_icon :heart %>&nbsp;&nbsp;Crush
      <% end %>

    </span>
  </div><!-- .actions -->
<% end %>
